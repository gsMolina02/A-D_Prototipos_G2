# Variables de Entorno para Supabase
# Copia estas variables a tu proyecto Vercel

# Base de Datos Supabase
DATABASE_URL=postgresql://postgres:[TU-PASSWORD]@db.xxx.supabase.co:5432/postgres

# JWT Secret (genéralo con: openssl rand -hex 32)
JWT_SECRET=tu_jwt_secret_super_seguro_de_32_caracteres_minimo

# Email Configuration (Gmail recomendado)
EMAIL_USER=tu_email@gmail.com
EMAIL_PASSWORD=tu_password_de_aplicacion_gmail
EMAIL_PROVIDER=gmail

# Twilio WhatsApp (opcional por ahora)
TWILIO_ACCOUNT_SID=tu_twilio_account_sid
TWILIO_AUTH_TOKEN=tu_twilio_auth_token  
TWILIO_PHONE_NUMBER=+1234567890

# Configuración del Servidor
PORT=5000
NODE_ENV=production

# CORS Origins
FRONTEND_URL=https://tu-app.vercel.app
